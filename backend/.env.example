# PastryJoy Backend Environment Variables
# Copy this file to .env and fill in your own values

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./pastryjoy.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://your_username:your_password@localhost:5432/pastryjoy_db

# Security
# Generate a strong secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=True
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# IMPORTANT SECURITY NOTES:
# 1. NEVER commit the .env file to version control
# 2. Use different SECRET_KEY for each environment (dev, staging, production)
# 3. Use strong, randomly generated passwords for database credentials
# 4. In production, set DEBUG=False
# 5. In production, set ALLOWED_ORIGINS to only your actual frontend domains
